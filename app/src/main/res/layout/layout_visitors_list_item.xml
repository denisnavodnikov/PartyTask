<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_visitor_image"
        android:layout_width="@dimen/circle_image_width_height"
        android:layout_height="@dimen/circle_image_width_height"
        android:layout_margin="@dimen/cardView_visitor_image_margin"
        app:cardCornerRadius="@dimen/circle_image_cardCornerRadius"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/visitor_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/name_of_visitor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inessa"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/name_of_visitor_text_size"
        android:textStyle="normal"
        android:layout_marginStart="@dimen/name_of_visitor_text_margin_start"
        app:layout_constraintBottom_toBottomOf="@+id/cardView_visitor_image"
        app:layout_constraintStart_toEndOf="@+id/cardView_visitor_image"
        app:layout_constraintTop_toTopOf="@+id/cardView_visitor_image" />
</androidx.constraintlayout.widget.ConstraintLayout>